<Window x:Class="CyberBot1.startWindow.IntroductionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberBot1.startWindow"
        mc:Ignorable="d"
    Title="Welcome to CyberBot"
        Height="400"
        Width="450"
        Background="#f4faff"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
   
        
        <Border Padding="20" Background="White" BorderBrush="#1976D2" BorderThickness="2" CornerRadius="10">
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="🤖 Welcome to CyberBot!"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#0D47A1"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>

                <TextBlock Text="Empowering your digital safety."
                       FontSize="14"
                       FontStyle="Italic"
                       TextAlignment="Center"
                       Margin="0,0,0,20"
                       Foreground="#1976D2"/>

                <TextBlock Text="I'm CyberBot what is your name:"
                       FontSize="14"
                       Margin="0,0,0,5"/>

                <TextBox x:Name="NameInput"
                     Height="20"
                     Width="200"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,10"/>

                <!-- Welcome message shown later -->
                <TextBlock x:Name="WelcomeMessage"
                       Text=""
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#0D47A1"
                       TextAlignment="Center"
                       Visibility="Collapsed"
                       Margin="0,10,0,10"/>

                <Button Content="Continue"
                    Width="100"
                    Background="#1976D2"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="Continue_Click"/>
            </StackPanel>
        </Border>
    </Window>

