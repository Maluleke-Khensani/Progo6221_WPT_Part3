<Window x:Class="CyberBot1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberBot1"
        mc:Ignorable="d"
        Title="CyberBot Assistant"
        Height="750"
        Width="700"
        Background="#f4faff"
        WindowStartupLocation="CenterScreen">
    <Border BorderThickness="4" BorderBrush="#1976D2" Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" HorizontalAlignment="Center" Width="600">

                <!-- Enhanced Heading -->
                <Border Background="#0D47A1" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🤖" FontSize="36" Margin="0,0,10,0"/>
                        <TextBlock Text="Welcome to CyberBot"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Buttons with Icons -->
                <Button Content="🧠  Who / What is CyberBot?"
                        Click="WhoIsCyberBot_Click"
                        Background="#1976D2"
                        Foreground="White"
                        FontSize="13"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Width="300"
                        Height="35"
                        Margin="0,0,0,10"/>

                <Button Content="💡  Random Cyber Safety Tip"
                        Click="RandomTip_Click"
                        Background="#64B5F6"
                        Foreground="White"
                        FontSize="13"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Width="300"
                        Height="35"
                        Margin="0,0,0,10"/>

                <Button Content="🛡️  Take Cybersecurity Quiz"
                        Click="OpenQuiz_Click"
                        Background="#1976D2"
                        Foreground="White"
                        FontSize="13"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Width="300"
                        Height="35"
                        Margin="0,0,0,10"/>

                <Button Content="💬  Chat with CyberBot"
                        Click="StartChatWithCyberBot_Click"
                        Background="#388E3C"
                        Foreground="White"
                        FontSize="13"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Width="300"
                        Height="35"
                        Margin="0,0,0,10"/>

                <Button Content="📋  Add / Manage Cyber Tasks"
                        Click="OpenTaskManager_Click"
                        Background="#0D47A1"
                        Foreground="White"
                        FontSize="13"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Width="300"
                        Height="35"
                        Margin="0,0,0,10"/>

                <Button Content="📜  Show History"
                        Click="ShowHistory_Click"
                        Background="#FFA000"
                        Foreground="White"
                        FontSize="13"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Width="300"
                        Height="35"
                        Margin="0,0,0,20"/>

                <!-- Help / Prompt Box -->
                <TextBlock Text="💡 What Im frequently asked:"
           FontSize="14"
           FontWeight="SemiBold"
           Foreground="#0D47A1"
           Margin="0,10,0,2"/>

                <Border BorderBrush="#90CAF9"
        BorderThickness="1"
        CornerRadius="5"
        Background="#E3F2FD"
        Padding="8"
        Width="560"
        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="• How are you?" />
                        <TextBlock Text="• What is your purpose?" />
                        <TextBlock Text="• What's your name?" />
                        <TextBlock Text="• Tell me a joke" />
                        <TextBlock Text="• Do you sleep?" />
                        <TextBlock Text="• What can you do?" />
                        
                    </StackPanel>
                </Border>

                <!-- NLP Section -->
                <TextBlock Text="💬 Or type what you want me to do:"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#0D47A1"
                           Margin="0,0,0,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="NlpInputBox"
                             Width="400"
                             Height="28"
                             ToolTip="Try: 'Who is CyberBot?', 'Give me a tip', 'Chat', 'Start quiz', 'Add task'"/>
                    <Button Content="Submit"
                            Width="80"
                            Height="28"
                            Click="SubmitNlp_Click"
                            Background="#1976D2"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Response -->
                <TextBlock Text="🤖 CyberBot's Response:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#0D47A1"
                           Margin="0,0,0,5"/>
                <Border BorderThickness="1" BorderBrush="#1976D2" CornerRadius="5" Padding="10" Background="White" Width="560">
                    <TextBlock x:Name="NlpResponseText"
                               FontSize="14"
                               TextWrapping="Wrap"
                               Foreground="Black"/>
                </Border>

                <!-- Chat History -->
                <TextBlock Text="📜 Chat History:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#0D47A1"
                           Margin="0,20,0,5"/>
                <Border BorderThickness="1" BorderBrush="#1976D2" CornerRadius="5" Padding="10" Background="White" Height="150" Width="560">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="ChatHistoryTextBlock"
                                   FontSize="13"
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
