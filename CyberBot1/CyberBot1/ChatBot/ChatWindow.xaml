<Window x:Class="CyberBot1.ChatBot.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberBot1.ChatBot"
        mc:Ignorable="d"
         Title="Chat with CyberBot"
        Height="500" Width="500"
        Background="#f4faff"
        WindowStartupLocation="CenterScreen">

    <DockPanel Margin="0">

        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Navigate">
                <MenuItem Header="Back to Main" Click="BackToMain_Click"/>
            </MenuItem>
        </Menu>

        <!-- Chat content -->
        <Grid DockPanel.Dock="Bottom" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Chat Display -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Background="White" Margin="0,0,0,10">
                <TextBlock x:Name="ChatDisplay"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="10"/>
            </ScrollViewer>

            <!-- User Input -->
            <Grid Grid.Row="1" Margin="0,0,0,5">
                <TextBox x:Name="ChatInput"
             FontSize="14"
             Height="30"
             VerticalContentAlignment="Center"
             TextChanged="ChatInput_TextChanged"/>
                <TextBlock x:Name="PlaceholderText"
               Text="Type your message here..."
               FontStyle="Italic"
               Foreground="Gray"
               IsHitTestVisible="False"
               Margin="5,0,0,0"
               VerticalAlignment="Center"
               FontSize="14"
               Visibility="Visible"/>
            </Grid>

            <!-- Submit Button -->
            <Button Grid.Row="2"
                Content="Send"
                Height="30"
                Background="#0D47A1"
                Foreground="White"
                Click="SendButton_Click"/>
        </Grid>
    </DockPanel>
</Window>
