<Window x:Class="CyberBot1.TaskManager.TaskManagerWindow"  
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
       xmlns:local="clr-namespace:CyberBot1"  
       mc:Ignorable="d"  
       Title="Task Manager"  
       Height="550"  
       Width="650"  
       Background="#f4faff"  
       WindowStartupLocation="CenterScreen">

        <DockPanel>

            <!-- Menu Bar -->
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Navigate">
                    <MenuItem Header="Back to Main" Click="BackToMain_Click"/>
                </MenuItem>
            </Menu>

            <!-- Existing content -->
            <Grid DockPanel.Dock="Bottom" Margin="20">
               
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Heading -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20" HorizontalAlignment="Center">
                        <TextBlock Text="📝 Cybersecurity Task Manager"  
                      FontSize="26"  
                      FontWeight="Bold"  
                      Foreground="#0D47A1"/>
                        <TextBlock Text="Manage your reminders and security goals"  
                      FontSize="14"  
                      Foreground="#1976D2"  
                      HorizontalAlignment="Center"  
                      Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Task List -->
                    <Border Grid.Row="1"  
               BorderBrush="#90CAF9"  
               BorderThickness="2"  
               CornerRadius="10"  
               Background="White"  
               Padding="10">
                        <ListBox x:Name="TaskListBox"  
                    ItemsSource="{Binding Tasks}"  
                    FontSize="14"  
                    Foreground="#0D47A1"  
                    BorderThickness="0"  
                    DisplayMemberPath="DisplayText"/>
                    </Border>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="2"  
                   Orientation="Horizontal"  
                   HorizontalAlignment="Center"  
                   Margin="0,20,0,0">
                        <Button Content="➕ Add Task"  
                   Width="120"  
                   Margin="5"  
                   Padding="10,5"  
                   Background="#64B5F6"  
                   Foreground="White"  
                   FontWeight="Bold"  
                   BorderBrush="#1E88E5"  
                   Click="AddTask_Click"/>

                        <Button Content="🗑️ Delete Task"  
                   Width="120"  
                   Margin="5"  
                   Padding="10,5"  
                   Background="#42A5F5"  
                   Foreground="White"  
                   FontWeight="Bold"  
                   BorderBrush="#1976D2"  
                   Click="DeleteTask_Click"/>

                        <Button Content="✔️ Mark Completed"  
                   Width="140"  
                   Margin="5"  
                   Padding="10,5"  
                   Background="#2196F3"  
                   Foreground="White"  
                   FontWeight="Bold"  
                   BorderBrush="#0D47A1"  
                   Click="CompleteTask_Click"/>
                    </StackPanel>
                </Grid>
        </DockPanel>
    </Window>